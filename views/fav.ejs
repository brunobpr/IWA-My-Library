<!DOCTYPE html>
<html>

<head>
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Favourite Books</title>
</head>

<body style="margin:0px; padding:0px; width:100%; background-color: black;">

	<% include templates/header ; %>
    <div class="container center">
	<h1 style="position:relative; color: white; text-align: center;">Favourite Books</h1>
	<!--This page will only show the book which has a favourite name and values -->
		<% data.books.forEach(function (book){
                if(book.Favourite == null){}else{%>
		<div class="row">
		<div class="col s12">
			<div class="card">
				<div class="card-image">
					<img src="<%= book.Favourite.Thumbnail %>">
					<span class="card-title"><%= book.Title %></span>
				</div>
				<div class="card-content">
					<p><%= book.Favourite.Description %></p>
				</div>
				<div class="card-action">
					<a href="<%= book.Favourite.Url %>">More Info</a>
				</div>
			</div>
		</div>
		<% }});%>
	</div>
	</div>
	</div>
	<script>
		M.AutoInit();
	</script>
</body>

</html>